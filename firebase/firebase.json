{
	"firestore": {
		"rules": "firestore.rules",
		"indexes": "firestore.indexes.json"
	},
	"functions": [
		{
			"source": "functions",
			"codebase": "default",
			"ignore": [
				"node_modules",
				".git",
				"firebase-debug.log",
				"firebase-debug.*.log",
				"*.local"
			],
			"predeploy": [
				"npm --prefix \"$RESOURCE_DIR\" run lint",
				"npm --prefix \"$RESOURCE_DIR\" run build"
			]
		}
	],
	"storage": {
		"rules": "storage.rules"
	},
	"emulators": {
		"auth": {
			"enabled": true,
			"port": 9099
		},
		"functions": {
			"enabled": true,
			"port": 5001
		},
		"firestore": {
			"enabled": true,
			"port": 8080
		},
		"storage": {
			"enabled": true,
			"port": 9199
		},
		"ui": {
			"host": "0.0.0.0",
			"enabled": true,
			"port": 4000
		},
		"singleProjectMode": true
	}
}
